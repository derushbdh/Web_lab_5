mixin createMenu(menu, active)
    each value, key in menu
        if active == key
            a.active(href= value)= key
        else
            a(href= value)= key

mixin createSection(header, text, image)
    section
        h3= header
        img(src= require("../images/" + image))
        p
            | #{text} 
            a(href="#") &hellip;

mixin createMenuBuild(menu, active)
    nav
        each url, title in menu
            a(href= url)= title
            
            if title == 'Главная'
                a.active(href="#")= active
